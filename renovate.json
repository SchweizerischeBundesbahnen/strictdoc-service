{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>SchweizerischeBundesbahnen/casc-renovate-preset-polarion-docker"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "pep621"
      ],
      "matchDatasources": [
        "pypi"
      ],
      "semanticCommitType": "feat",
      "matchUpdateTypes": [
        "minor"
      ],
      "matchPackageNames": [
        "strictdoc"
      ]
    },
    {
      "matchManagers": [
        "pep621"
      ],
      "matchDatasources": [
        "pypi"
      ],
      "semanticCommitType": "feat!",
      "matchUpdateTypes": [
        "major"
      ],
      "matchPackageNames": [
        "strictdoc"
      ]
    },
    {
      "matchManagers": [
        "asdf"
      ],
      "matchDepNames": [
        "python"
      ],
      "matchUpdateTypes": [
        "major",
        "minor"
      ],
      "semanticCommitType": "chore",
      "commitMessageTopic": "Python version",
      "automerge": false,
      "description": "Python major/minor version updates require manual review due to potential platform-specific compatibility issues (e.g., uvloop on arm64). Patch updates auto-merge. See issue #72"
    }
  ]
}
