{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>SchweizerischeBundesbahnen/casc-renovate-preset-polarion-docker"
  ],
  "packageRules": [
    {
      "groupName": "all python dependencies",
      "matchManagers": [
        "poetry"
      ],
      "postUpdateOptions": [
        "poetry-lock"
      ],
      "matchDatasources": [
        "pypi"
      ],
      "excludePackageNames": [
        "strictdoc"
      ]
    },
    {
      "groupName": "strictdoc minor updates",
      "matchManagers": [
        "poetry"
      ],
      "postUpdateOptions": [
        "poetry-lock"
      ],
      "matchDatasources": [
        "pypi"
      ],
      "semanticCommitType": "feat",
      "matchUpdateTypes": [
        "minor"
      ],
      "matchPackageNames": [
        "strictdoc"
      ]
    },
    {
      "groupName": "strictdoc major updates",
      "matchManagers": [
        "poetry"
      ],
      "postUpdateOptions": [
        "poetry-lock"
      ],
      "matchDatasources": [
        "pypi"
      ],
      "semanticCommitType": "feat!",
      "matchUpdateTypes": [
        "major"
      ],
      "matchPackageNames": [
        "strictdoc"
      ]
    }
  ]
}
